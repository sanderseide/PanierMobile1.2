<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.about_us">

    <TextView
        android:id="@+id/bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="We are students in computer Science, Espoir University at Calvary Chapel based at Port-au-Prince, Petion-Ville. Our mainly interest is in the Software developement field. We are proud to represent haiti in the tech world."
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/member_tag"/>

    <TextView
        android:id="@+id/member_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Team Member"
        android:textColor="@color/purple_500"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/claudio_image"
        />

    <ImageView
        android:id="@+id/claudio_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@id/claudio_tag"
        app:layout_constraintEnd_toStartOf="@+id/sander_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/member_tag"
        app:srcCompat="@drawable/claudio" />

    <ImageView
        android:id="@+id/sander_image"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toEndOf="@id/claudio_image"
        app:layout_constraintTop_toBottomOf="@id/member_tag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sander_tag"
        app:srcCompat="@drawable/claudio" />

    <TextView
        android:id="@+id/claudio_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/claudio_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sander_tag"

        android:text="Claudio Terogene"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/sander_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sander Seide"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/claudio_tag"
        app:layout_constraintTop_toBottomOf="@+id/sander_image" />


    <TextView
        android:id="@+id/claudio_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Software Developer\nWordpress Designer"
        app:layout_constraintTop_toBottomOf="@id/claudio_tag"
        android:gravity="center"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@id/sander_Description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/sander_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informaticien\nGestionnaire"
        app:layout_constraintTop_toBottomOf="@id/claudio_tag"
        android:gravity="center"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/claudio_Description"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>